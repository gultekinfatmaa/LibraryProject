@model yazlab2_1.Models.EntitiyFramework.Kullanicilar
 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Giriş Yapınız</h2>
        @ViewBag.Mesaj
        @using (Html.BeginForm("Login","Home",FormMethod.Post)){
        <div class="form-group">
            @Html.LabelFor(m => m.isim)
            @Html.TextBoxFor(m => m.isim, new { @class = "form-control", placeholder = "Kullanıcı Adı" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.password)
            @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Parola" })
        </div>
        <button type="submit" class="btn btn-block btn-success">Giriş Yap</button>

        }

    </div>
</body>
</html>
